<Window x:Class="TextureCoordsCalculatorGUI.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextureCoordsCalculatorGUI.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Enter FileData ID" Height="130" Width="300">
    <Grid Background="DarkGray">
        <StackPanel Orientation="Vertical">
            <Label  HorizontalAlignment="Left" VerticalAlignment="Center" Content="Please, enter the FDID : "/>
            <TextBox Name="FidTextBox" Width="250" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button  Click="OnButtonConfirmClick"  Name="ConfirmBtn" Width="100" Margin="15" Content="Ok" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
